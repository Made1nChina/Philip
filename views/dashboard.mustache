{{> header}}
<div class="hero">
</div>
<div class="dashboard">
    <h1>Welcome to your Dashboard</h1>
    <!-- Header Section -->
    <a href="/dashboard/logout" class="logout-button">Logout</a>
    <div class="header">
        <h1>Your Blog Dashboard</h1>
        <a href="/dashboard/new" class="create-button">Create New Blog</a>
    </div>

    <!-- Blog List Section -->
    <div class="blog-list">
        {{#blogs}}
            <div class="blog-item">
                <h2>{{title}}</h2>
                <p>{{short_text}}</p>

                {{#preview_image}}
                    <div class="blog-image">
                        <img src="/uploads/{{preview_image}}" alt="{{title}}"/>
                    </div>
                {{/preview_image}}

                <div class="blog-actions">
                    <a href="/dashboard/edit/{{id}}" class="edit-button">Edit</a>
                </div>
            </div>
        {{/blogs}}
    </div>

    {{^blogs}}
        <p>No blogs found. Click "Create New Blog" to start writing!</p>
    {{/blogs}}
</div>
{{> footer}}
