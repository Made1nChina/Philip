<h1>Welcome to your Dashboard</h1>

<a href="/dashboard/logout">Logout</a>

<h2>Your blog</h2>
<ul>
    {{#blog}}
        <li>
            <h3>{{title}}</h3>
            <p>{{short_text}}</p>
            {{#preview_image}}
                <img src="{{preview_image}}" alt="Preview Image" style="max-width: 200px;" />
            {{/preview_image}}
            <p><a href="/dashboard/blog/{{id}}">View Details</a></p>
            <form action="/dashboard/blog/{{id}}/edit" method="post">
                <input type="text" name="title" value="{{title}}" />
                <textarea name="short_text">{{short_text}}</textarea>
                <input type="text" name="preview_image" value="{{preview_image}}" placeholder="Preview Image URL" />
                <button type="submit">Save</button>
            </form>
            <form action="/dashboard/blog/{{id}}/delete" method="post">
                <button type="submit">Delete</button>
            </form>
        </li>
    {{/blog}}
</ul>

<h2>Create a New Blog</h2>
<form action="/dashboard/blog" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" placeholder="Enter the blog title" required />

    <label for="short_text">Short Text:</label>
    <textarea id="short_text" name="short_text" placeholder="Write your blog short text" required></textarea>

    <label for="preview_image">Preview Image URL:</label>
    <input type="text" id="preview_image" name="preview_image" placeholder="Enter a URL for the preview image" />


    <button type="submit">Create Blog</button>
</form>

